  <style>
    /* 경력 제목을 한 줄로 정렬 */
    .career-title {
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.8rem;
      font-weight: bold;
      margin-bottom: 20px;
      gap: 10px; /* 아이콘과 텍스트 간격 */
    }

    .career-title img {
      width: 40px;
      height: 40px;
    }

    /* 카드 크기 통일 */
    .card {
      min-height: 300px; /* 모든 카드 높이 동일하게 설정 */
      padding: 10px;
      border-radius: 10px;
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
      height: 160px; /* 이미지 크기 동일하게 설정 */
      object-fit: cover;
      width: 100%;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
    }

    .card-body {
      display: flex;
      flex-direction: column;
      justify-content: space-between; /* 텍스트가 적어도 카드 크기 유지 */
    }
  </style>

